<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="8">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/pxEditText"
        android:layout_row="0"
        android:layout_column="1" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/pyEditText"
        android:layout_row="1"
        android:layout_column="1" />

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit Point in View"
        android:id="@+id/editPointCheckBox"
        android:layout_row="2"
        android:layout_column="0"
        android:checked="false"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="p = "
        android:id="@+id/pTextView"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Set to center"
        android:id="@+id/centerPointButton"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2" />

</GridLayout>